<div class="container">  
  <div class="row justify-content-md-center">
    <div class = "col-8">
      <% @articles.each do |article| %>        
        <div class="card text-center mt-2 shadow mb-5 bg-body rounded">
          <div class="card-header font-itallic">
            By <%= link_to article.user.username, user_path(article.user), class: 'text-decoration-none' %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success text-decoration-none" %></h5>
            <div class="card-text"><%= simple_format(truncate(article.description, length: 40)) %></div>
            <div>
              <%= link_to 'View', article_path(article), class: "btn btn-outline-success" %>
              <% if logged_in? && article.user == current_user %> 
                <%= link_to 'Edit', edit_article_path(article), class: "btn btn-outline-info"  %>
                <%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
              <% end %>
            </div>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(article.created_at) %> ago, Edited <%= time_ago_in_words(article.updated_at) %> ago</small>
          </div>
        </div>      
      <% end %>
    </div>
  </div>
</div>