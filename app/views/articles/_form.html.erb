<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error', obj: @article %>
      <%= form_with(model: @article,  data: { turbo: false }, class:"p-3 shadow rounded mb-3 bg-info", local: true ) do |f| %>
        <div class="form-group row py-1 mb-3">
          <%= f.label :title, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class:"form-control shadow rounded", placeholder:"Title of Article" %>
          </div>
        </div>
        <div class="form-group row py-1 mb-3">
          <%= f.label :description, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_area :description, rows:8, class:"form-control shadow rounded", placeholder:"Description of Article" %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit class:"btn btn-outline-light btn-lg" %>
        </div>
      <% end %>     
    </div>
    <%= link_to '[ Cancel and return to article listing ]', articles_path, class:"text-info text-center" %>
  </div>
</div>