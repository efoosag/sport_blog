<h2 class='text-center mt-4'>Article about <%= @article.title.capitalize %></h2>
  <div class="container">  
    <div class="row justify-content-md-center">
      <div class = "col-8">             
        <div class="card text-center mt-4 shadow mb-5 bg-body rounded">
          <h4 class="card-header font-itallic text-success">
            By <div , class="mb-1"><%= @article.user.username %></div>
            <%= link_to user_gravatar(@article.user), user_path(@article.user) %>
          </h4>
          <div class="card-body">
            <div class="card-text"><%= simple_format(@article.description) %></div>
            <div> 
              <% if logged_in? && (@article.user == current_user || current_user.admin?) %>             
                <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-info"  %>
                <%= link_to 'Delete', article_path(@article), data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
                <% end %>
            </div>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@article.created_at) %> ago, Edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
          </div>
        </div>
       </div>       
    </div>
  </div>
