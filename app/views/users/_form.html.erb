<div class="container"> 
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/error', obj: @user %>
      <%= form_with(model: @user,  data: { turbo: false }, class:"p-3 shadow rounded mb-3 bg-info", local: true ) do |f| %>
        <div class="form-group row py-1 mb-3">
          <%= f.label :username, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :username, class:"form-control shadow rounded", placeholder:"Enter your username" %>
          </div>
        </div>
        <div class="form-group row py-1 mb-3">
          <%= f.label :email, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class:"form-control shadow rounded", placeholder:"Enter your email" %>
          </div>
        </div>
        <div class="form-group row py-1 mb-3">
          <%= f.label :password, class:"col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class:"form-control shadow rounded", placeholder:"Enter your password" %>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit class:"btn btn-outline-light btn-lg" %>
        </div>
      <% end %>     
    </div>
    <%= link_to '[ Cancel and return to article listing ]', articles_path, class:"text-info text-center" %>
  </div>
</div>