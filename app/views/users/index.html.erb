<h1 class='text-center mt-3'>Allsport Users</h1>
<div class="flickr_pagination"> 
  <%= will_paginate @users, :container => false %>
</div>
<div class="container">  
  <div class="row justify-content-md-center">
    <div class = "col-8 mb-5">
      <% @users.each do |user| %>        
        <div class="card text-center mt-2 shadow mb-5 bg-body rounded">
          <div class="card-header font-itallic">
            <%= link_to user.username, user_path(user), class: 'text-decoration-none' %>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= link_to user_gravatar(user, size: 100), user %></h5>
            <div class="card-text"><%= pluralize(user.articles.count, 'article') %></div>
            <div>
              <%= link_to 'View', user, class: "btn btn-outline-success" %>
              <% if logged_in? %>
                <% if user == current_user %> 
                  <%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-info"  %>
                <% end %> 
                <% if current_user.admin? %>
                  <%= link_to 'Delete', user_path(user), data: { "turbo-method": :delete, 
                  turbo_confirm: "Are You sure You want to delete users and all their articles?" },  
                  class: "btn btn-outline-danger" %>
                <% end %>
              <% end %>             
            </div>
          </div>
          <div class="card-footer text-muted">
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>      
      <% end %>
    </div>
  </div>
</div>
<div class="flickr_pagination mb-3"> 
  <%= will_paginate @users, :container => false %>
</div>
